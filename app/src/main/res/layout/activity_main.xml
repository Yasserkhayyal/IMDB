<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeScreenRoot"
    android:background="@color/colorPrimary"
    tools:context=".ui.home.activity.MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOfPopular"
        android:layout_width="240dp"
        android:layout_height="400dp"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:layout_centerInParent="true"
        tools:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:id="@+id/popularImagePoster"
                />

            <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:indicatorName="LineSpinFadeLoaderIndicator"
                style="@style/AVLoadingIndicatorView"
                android:layout_centerInParent="true"
                app:indicatorColor="@color/colorOfGreen"
                android:visibility="visible"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/popularImageLoading"
                android:layout_marginTop="80dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:paddingStart="42dp"
                android:layout_below="@id/popularImagePoster"
                android:paddingEnd="42dp"
                android:id="@+id/popularCardName"
                android:textAllCaps="false"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAppearance="@style/amoiriFontItalic"
                android:textColor="@android:color/white"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:id="@+id/popularCardDetail"
                android:layout_below="@id/popularCardName"
                android:lines="3"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:textAllCaps="false"
                android:paddingHorizontal="2dp"
                android:textAppearance="@style/amoiriFontItalic"
                android:textColor="@android:color/white" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/detail_card_bottom_raduis_bg"
                android:layout_alignParentBottom="true"
                android:text="Go To Detail"
                android:id="@+id/goToDetailOfMovieDetailButton"
                android:textColor="@android:color/white"
                android:textAppearance="@style/amoiriFontBoldItalic"
                />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@id/bottomNav"
        app:layout_anchorGravity="top"
        android:fitsSystemWindows="true"
        android:layout_marginBottom="@dimen/_52sdp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/mainMovieGroups"
            >

            <ImageView
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/imdb"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentTop="true"
                android:id="@+id/imdbImage"
                />

            <RelativeLayout
                android:id="@+id/popularMoviesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imdbImage"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/movie_card_bg"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/popularMoviesHeader"
                    >

                    <ImageView
                        android:id="@+id/redIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/red_mark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/redIndicatorView"
                        android:text="Popular"
                        android:textAppearance="@style/amoiriFontBoldItalic"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/redmoreIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/redmoreIcon"
                        android:text="More"
                        android:textAppearance="@style/amoiriFontRegular"
                        android:textColor="@android:color/white"
                        android:textSize="12dp" />

                </RelativeLayout>

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/popularIndicatorView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:indicatorName="LineSpinFadeLoaderIndicator"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_centerInParent="true"
                    app:indicatorColor="@color/colorOfGreen"
                    android:visibility="visible"  />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/popularMoviesHeader"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/popularMoviesRecyclerView"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/movie_item"
                    tools:itemCount="4"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:id="@+id/popularMoviesErrorContainer"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    >
                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/ic_warning"
                        android:id="@+id/popularWarningImage"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fail to Load Popular Movies"
                        android:textColor="@android:color/white"
                        android:textAppearance="@style/amoiriFontBoldItalic"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/popularWarningImage"
                        android:id="@+id/popularWarningText"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/popularWarningText"
                        android:layout_centerHorizontal="true"
                        android:text="Retry"
                        android:clickable="true"
                        android:textColor="@android:color/white"
                        android:background="@drawable/retry_button_bg"
                        android:textAllCaps="false"
                        android:id="@+id/retryPopularButton"
                        android:textAppearance="@style/amoiriFontItalic"
                        />

                </RelativeLayout>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/topRatedMoviesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/popularMoviesCard"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/movie_card_bg"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/topRatedMoviesHeader"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/greenIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/green_mark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/greenIndicatorView"
                        android:text="Top Rated"
                        android:textAppearance="@style/amoiriFontBoldItalic"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/greenmoreIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/greenmoreIcon"
                        android:text="More"
                        android:textAppearance="@style/amoiriFontRegular"
                        android:textColor="@android:color/white"
                        android:textSize="12dp" />

                </RelativeLayout>

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/topRatedIndicatorView"
                    app:indicatorName="LineSpinFadeLoaderIndicator"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_centerInParent="true"
                    app:indicatorColor="@color/colorOfGreen"
                    android:visibility="visible"  />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/topRatedMoviesHeader"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/topRatedMoviesRecyclerView"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/movie_item"
                    tools:itemCount="4"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:id="@+id/topRatedMoviesErrorContainer"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    >
                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/ic_warning"
                        android:id="@+id/topRatedWarningImage"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fail to Load Top Rated Movies"
                        android:textColor="@android:color/white"
                        android:textAppearance="@style/amoiriFontBoldItalic"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/topRatedWarningImage"
                        android:id="@+id/topRatedWarningText"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/topRatedWarningText"
                        android:layout_centerHorizontal="true"
                        android:text="Retry"
                        android:clickable="true"
                        android:textColor="@android:color/white"
                        android:background="@drawable/retry_button_bg"
                        android:textAllCaps="false"
                        android:id="@+id/retryTopRatedButton"
                        android:textAppearance="@style/amoiriFontItalic"
                        />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/upcommingMoviesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/topRatedMoviesCard"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/movie_card_bg"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/inComingMoviesHeader"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/amberIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/amber_mark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/amberIndicatorView"
                        android:text="Incomming"
                        android:textAppearance="@style/amoiriFontBoldItalic"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/ambermoreIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/ambermoreIcon"
                        android:text="More"
                        android:textAppearance="@style/amoiriFontRegular"
                        android:textColor="@android:color/white"
                        android:textSize="12dp" />

                </RelativeLayout>

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/inComingIndicatorView"
                    app:indicatorName="LineSpinFadeLoaderIndicator"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_centerInParent="true"
                    app:indicatorColor="@color/colorOfGreen"
                    android:visibility="visible"  />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/inComingMoviesHeader"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/inComingMoviesRecyclerView"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/movie_item"
                    tools:itemCount="4"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:id="@+id/inComingMoviesErrorContainer"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    >
                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/ic_warning"
                        android:id="@+id/inComingWarningImage"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fail to Load In Coming Movies"
                        android:textColor="@android:color/white"
                        android:textAppearance="@style/amoiriFontBoldItalic"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/inComingWarningImage"
                        android:id="@+id/inComingWarningText"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/inComingWarningText"
                        android:layout_centerHorizontal="true"
                        android:text="Retry"
                        android:clickable="true"
                        android:textColor="@android:color/white"
                        android:background="@drawable/retry_button_bg"
                        android:textAllCaps="false"
                        android:id="@+id/retryInComingButton"
                        android:textAppearance="@style/amoiriFontItalic"
                        />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nowPlayingMoviesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/upcommingMoviesCard"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/movie_card_bg"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/nowPlayingMoviesHeader"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/grayIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/gray_mark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/grayIndicatorView"
                        android:text="Now Playing"
                        android:textAppearance="@style/amoiriFontBoldItalic"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/graymoreIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/graymoreIcon"
                        android:text="More"
                        android:textAppearance="@style/amoiriFontRegular"
                        android:textColor="@android:color/white"
                        android:textSize="12dp" />

                </RelativeLayout>

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/nowPlayingIndicatorView"
                    app:indicatorName="LineSpinFadeLoaderIndicator"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_centerInParent="true"
                    app:indicatorColor="@color/colorOfGreen"
                    android:visibility="visible"  />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/nowPlayingMoviesHeader"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/nowPlayingMoviesRecyclerView"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/movie_item"
                    tools:itemCount="4"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:id="@+id/nowPlayingMoviesErrorContainer"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    >
                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/ic_warning"
                        android:id="@+id/nowPlayingWarningImage"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fail to Load Now Playing Movies"
                        android:textColor="@android:color/white"
                        android:textAppearance="@style/amoiriFontBoldItalic"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/nowPlayingWarningImage"
                        android:id="@+id/nowPlayingWarningText"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nowPlayingWarningText"
                        android:layout_centerHorizontal="true"
                        android:text="Retry"
                        android:clickable="true"
                        android:textColor="@android:color/white"
                        android:background="@drawable/retry_button_bg"
                        android:textAllCaps="false"
                        android:id="@+id/retryNowPlayingButton"
                        android:textAppearance="@style/amoiriFontItalic"
                        />

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>




    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorOfAmber" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:src="@drawable/ic_baseline_settings_24"
        app:backgroundTint="@android:color/white"
        app:layout_anchor="@id/bottomNav"
        app:layout_anchorGravity="center|top" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>