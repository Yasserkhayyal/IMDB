<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.home.activity.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@id/bottomNav"
        app:layout_anchorGravity="top"
        android:layout_marginBottom="@dimen/_52sdp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp">

            <ImageView
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/imdb"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentTop="true"
                android:id="@+id/imdbImage"
                />



            <RelativeLayout
                android:id="@+id/popularMoviesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imdbImage"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/movie_card_bg"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/popularMoviesHeader"
                    >

                    <ImageView
                        android:id="@+id/redIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/red_mark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/redIndicatorView"
                        android:text="Popular"
                        android:textAppearance="@style/amoiriFontBoldItalic"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/redmoreIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/redmoreIcon"
                        android:text="More"
                        android:textAppearance="@style/amoiriFontRegular"
                        android:textColor="@android:color/white"
                        android:textSize="12dp" />

                </RelativeLayout>

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/popularIndicatorView"
                    app:indicatorName="LineSpinFadeLoaderIndicator"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_centerInParent="true"
                    app:indicatorColor="@color/colorOfGreen"
                    android:visibility="invisible"  />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/popularMoviesHeader"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/popularMoviesRecyclerView"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/movie_item"
                    tools:itemCount="4"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/topRatedMoviesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/popularMoviesCard"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/movie_card_bg"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/topRatedMoviesHeader"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/greenIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/green_mark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/greenIndicatorView"
                        android:text="Top Rated"
                        android:textAppearance="@style/amoiriFontBoldItalic"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/greenmoreIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/greenmoreIcon"
                        android:text="More"
                        android:textAppearance="@style/amoiriFontRegular"
                        android:textColor="@android:color/white"
                        android:textSize="12dp" />

                </RelativeLayout>

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/topRatedIndicatorView"
                    app:indicatorName="LineSpinFadeLoaderIndicator"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_centerInParent="true"
                    app:indicatorColor="@color/colorOfGreen"
                    android:visibility="invisible"  />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/topRatedMoviesHeader"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/topRatedMoviesRecyclerView"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/movie_item"
                    tools:itemCount="4"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/upcommingMoviesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/topRatedMoviesCard"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/movie_card_bg"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/inComingMoviesHeader"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/amberIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/amber_mark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/amberIndicatorView"
                        android:text="Incomming"
                        android:textAppearance="@style/amoiriFontBoldItalic"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/ambermoreIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/ambermoreIcon"
                        android:text="More"
                        android:textAppearance="@style/amoiriFontRegular"
                        android:textColor="@android:color/white"
                        android:textSize="12dp" />

                </RelativeLayout>

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/inComingIndicatorView"
                    app:indicatorName="LineSpinFadeLoaderIndicator"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_centerInParent="true"
                    app:indicatorColor="@color/colorOfGreen"
                    android:visibility="invisible"  />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/inComingMoviesHeader"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/inComingMoviesRecyclerView"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/movie_item"
                    tools:itemCount="4"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nowPlayingMoviesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/upcommingMoviesCard"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/movie_card_bg"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/nowPlayingMoviesHeader"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/grayIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/gray_mark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/grayIndicatorView"
                        android:text="Now Playing"
                        android:textAppearance="@style/amoiriFontBoldItalic"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/graymoreIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/graymoreIcon"
                        android:text="More"
                        android:textAppearance="@style/amoiriFontRegular"
                        android:textColor="@android:color/white"
                        android:textSize="12dp" />

                </RelativeLayout>

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/nowPlayingIndicatorView"
                    app:indicatorName="LineSpinFadeLoaderIndicator"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_centerInParent="true"
                    app:indicatorColor="@color/colorOfGreen"
                    android:visibility="invisible"  />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/nowPlayingMoviesHeader"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/nowPlayingMoviesRecyclerView"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/movie_item"
                    tools:itemCount="4"
                    />


            </RelativeLayout>

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorOfAmber" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:src="@drawable/ic_baseline_settings_24"
        app:backgroundTint="@android:color/white"
        app:layout_anchor="@id/bottomNav"
        app:layout_anchorGravity="center|top" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>