<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_drawable</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
        <item name="closeIcon">@drawable/ic_baseline_close_24</item>
        <!-- Search button icon -->
        <item name="goIcon">@drawable/ic_baseline_close_24 </item>
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="editTextColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <!-- Commit icon shown in the query suggestion row -->

    </style>

    <style name="ActionBarThemeOverlay">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="amoiriFontRegular" parent="TextAppearance.AppCompat.Medium">

        <item name="fontFamily">@font/amiri_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>

    </style>

    <style name="amoiriFontItalic"  parent="TextAppearance.AppCompat.Medium">

        <item name="fontFamily">@font/amiri_italic</item>
        <item name="android:textSize">@dimen/_12ssp</item>

    </style>

    <style name="amoiriFontBold"  parent="TextAppearance.AppCompat.Medium">

        <item name="fontFamily">@font/amiri_bold</item>
        <item name="android:textSize">@dimen/_21ssp</item>

    </style>

    <style name="amoiriFontBoldItalic"  parent="TextAppearance.AppCompat.Medium">

        <item name="fontFamily">@font/amiri_bolditalic</item>
        <item name="android:textSize">@dimen/_12ssp</item>

    </style>

</resources>