<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:id="@+id/reviewCard"
    android:background="@drawable/review_card_bg_black"
    >

    <ImageView
        android:id="@+id/personFrameImageview"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:src="@drawable/ic_image_frame_white"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:id="@+id/personImageView"
        tools:src="@drawable/a"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        />

    <com.wang.avi.AVLoadingIndicatorView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        app:indicatorName="LineSpinFadeLoaderIndicator"
        style="@style/AVLoadingIndicatorView"
        app:indicatorColor="@color/colorOfBlue"
        android:visibility="visible"
        android:elevation="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/detailPosterImageLoading"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/personFrameImageview"
        android:layout_marginTop="@dimen/_15sdp"
        tools:text="Mohamed Morse"
        android:textAppearance="@style/amoiriFontBold"
        android:textColor="@color/colorOfBlue"
        android:textSize="@dimen/_14ssp"
        android:id="@+id/personNameTextView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/personNameTextView"
        android:layout_toRightOf="@id/personFrameImageview"
        android:layout_marginTop="@dimen/_1sdp"
        tools:text="Mohamed Morse asddasdasdasdasdasdasdasdasdasda sdasdasdasdsdasdasd \n Mohamed Morse asddasdasdasdasdasdasdasdasdasdasdasdasdasdsdasdasd"
        android:textAppearance="@style/amoiriFontItalic"
        android:textColor="@android:color/white"
        android:lines="3"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="@dimen/_12ssp"
        android:paddingRight="@dimen/_5sdp"
        android:id="@+id/personReviewTextView"
        android:layout_marginBottom="@dimen/_14sdp"
        />



</RelativeLayout>