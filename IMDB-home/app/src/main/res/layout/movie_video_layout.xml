<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="@dimen/_150sdp"
    android:background="@drawable/video_card_bg_black"
    android:layout_marginVertical="@dimen/_10sdp"
    android:id="@+id/videoCard"
    android:layout_marginHorizontal="@dimen/_15sdp"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_centerInParent="true"
        android:id="@+id/youtubeVideoPlayer"
        android:scaleType="fitXY"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        />

    <com.wang.avi.AVLoadingIndicatorView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        app:indicatorName="LineSpinFadeLoaderIndicator"
        style="@style/AVLoadingIndicatorView"
        app:indicatorColor="@color/colorOfRed"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:elevation="4dp"
        android:id="@+id/videoImageLoading"
        />

    <ImageButton
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_baseline_play_circle_filled_24"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        android:id="@+id/playMovieButton"
        android:background="@android:color/transparent"
        />

</RelativeLayout>